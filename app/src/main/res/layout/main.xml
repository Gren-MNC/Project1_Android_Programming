<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right|center|top"
        android:textSize="40dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:background="@drawable/display"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:fontFamily="@font/unicode_digital"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:gravity="right|center|bottom"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:background="@drawable/display"
        android:paddingEnd="20dp"
        android:layout_below="@+id/work"
        android:text=""
        android:fontFamily="@font/unicode_digital"
        android:textStyle="bold"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"/>

    <ImageButton
        android:id="@+id/dot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_white"
        android:contentDescription="number7"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_dot" />

    <ImageButton
        android:id="@+id/zero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/dot"
        android:background="@drawable/btn_white"
        android:contentDescription="number0"
        android:scaleType="fitCenter"
        android:src="@drawable/num_0" />

    <ImageButton
        android:id="@+id/negative"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/zero"
        android:background="@drawable/btn_white"
        android:contentDescription="number0"
        android:scaleType="fitCenter"
        android:src="@drawable/add_minus" />

    <ImageButton
        android:id="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/negative"
        android:background="@drawable/btn_blue"
        android:contentDescription="equal"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_equal" />

    <ImageButton
        android:id="@+id/one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/dot"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number1"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_1"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/zero"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/one"
        android:contentDescription="number2"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_2"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/three"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/equal"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/two"
        android:contentDescription="number3"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_3"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/equal"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/three"
        android:contentDescription="division"
        android:background="@drawable/btn_blue"
        android:src="@drawable/btn_div"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/four"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/one"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number4"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_4"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/five"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/two"
        android:layout_toRightOf="@+id/four"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number5"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_5"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/six"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/five"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number6"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_6"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/multiple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/division"
        android:layout_toRightOf="@+id/six"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="multiple"
        android:background="@drawable/btn_blue"
        android:src="@drawable/btn_mul"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/seven"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/four"
        android:contentDescription="number7"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_7"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/eight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/five"
        android:layout_toRightOf="@+id/seven"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number8"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_8"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/night"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="number9"
        android:background="@drawable/btn_white"
        android:src="@drawable/num_9"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/subtraction"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/multiple"
        android:layout_toRightOf="@+id/night"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="subtract"
        android:background="@drawable/btn_blue"
        android:src="@drawable/btn_sub"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/addition"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/subtraction"
        android:layout_toRightOf="@+id/night"
        android:layout_below="@+id/result"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="add"
        android:background="@drawable/btn_blue"
        android:src="@drawable/btn_add"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/deleteAll"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_above="@+id/seven"
        android:layout_below="@+id/result"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_yellow"
        android:contentDescription="delete_all"
        android:scaleType="fitCenter"
        android:src="@drawable/del_all" />

    <ImageButton
        android:id="@+id/deleteOne"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/deleteAll"
        android:layout_above="@id/eight"
        android:layout_below="@+id/result"

        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="delete_one"
        android:background="@drawable/btn_yellow"
        android:src="@drawable/delete_one"
        android:scaleType="fitCenter" />
</RelativeLayout>